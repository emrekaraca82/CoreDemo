@using EntityLayer.Concrete
@model List<MessageTwo>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <td>Konu</td>
        <td>Gönderen</td>
        <td>Tarih</td>
        <td>Mesaj Aç</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>     
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesaj Aç</a></td>
        </tr>
    }
</table>
<a href="/Message/MessageDetails/" class="btn btn-primary">Yeni Blog Oluştur</a>



