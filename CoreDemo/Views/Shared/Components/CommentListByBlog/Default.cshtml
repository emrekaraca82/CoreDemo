@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning" role="alert">
            <h5>Bu Blog Hiç Yorum Yapılmamış. İlk Yorumu Siz Yapın</h5>
        </div>      
    }
    else
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>

                </div>
            </div>
        }
</div>